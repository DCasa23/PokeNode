<%- include("template/cabecera.ejs", {cabecera:"Panel"}) %>
    <div class="container">
        <h1>CRUD Mongo</h1>
        <a class="btn btn-success btn-block my-4" href="/entrenador/crearentrenador">Crear un nuevo entrenador</a>

        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Tipo</th>
                    <th scope="col">Nivel</th>
                    <th scope="col">Amistad</th>
                </tr>
            </thead>
            <tbody>
                <% if (arrayEntrenador.length> 0) { %>
                    <!--Haremos el foreach para recorrer el array-->
                    <% arrayEntrenador.forEach(entrenador=> { %>
                        <tr>
                            <th scope="row">
                                <%= entrenador.id %>
                            </th>
                            <td>
                                <%= entrenador.nombre %>
                            </td>
                            <td>
                                <%= entrenador.tipo %>
                            </td>
                            <td>
                                <%= entrenador.nivel %>
                            </td>
                            
                            <td>
                                <%= entrenador.amistad %>
                            </td>

                            <td>
                                <a class="btn btn-warning btn-sm" href="/entrenador/<%= entrenador.id %>">Editar/Eliminar</a>
                            </td>
                        </tr>
                        <% }) %>
                            <% } %>
            </tbody>
        </table>
        <a class="btn btn-dark btn-block my-4" href="/">Volver</a>
    </div>


    <%- include("template/footer.ejs") %>